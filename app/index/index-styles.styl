@import '~common/fonts/families.styl'

dark     = #331832
darkest  = #272932
bright   = #F7B267
cssqd-bg = darkcyan
jsqd-bg  = #D8BE49
_qd-bg   = #3590F3

h1
  font-family sans-serif
  font-weight lighter
  font-size 1.5rem

.flex-column-center
  display flex
  align-items center
  flex-direction column

header
  text-align center
  background dark
  padding 5rem 0 6.15rem
  font-family 'Montserrat'

  .logo
    color bright
    font-size 7rem
    font-weight lighter

  .tagline
    font-size 1.15rem
    margin-top 1.15rem
    padding 0 1.15rem
    font-weight lighter
    color #F5F1ED

section
  h1
    font-size 2.8rem
    padding 3rem 0
    color darkest

.demo
  background #F5F1ED

  .description
    width 60vw
    font-family sans-serif
    font-weight lighter
    font-size 1.2rem
    padding 0 0 1.2rem
    text-align center

    p
      margin-bottom 1.2rem

  .screenshot
    width 60vw

  .try-cssqd-button
    padding 3rem 0
    font-family sans-serif
    font-weight lighter

a
  text-decoration none
  font-family sans-serif
  font-weight lighter

  .button
    background-color bright
    font-size 1.5rem
    width 20vw
    min-width 240px
    padding 1rem
    color dark
    text-align center

.events
  background #FCFCFC

  .description
    font-family sans-serif
    font-weight lighter
    font-size 1.5rem
    margin-bottom .5rem

    p
      text-align center

    & + a
      margin 2rem 0

.github
  a
    display flex
    align-items center
    justify-content center
    text-decoration none
    color #f5f1ed

    .logo
      width 42px
      height 42px
      background-image url(GitHub-Mark-120px-plus.png)
      background-size contain
      margin 2rem 1rem

    .on-github
      font-size 1rem

footer
  background dark
  text-align center
  padding 2rem
  color #f5f1ed
  font-family sans-serif
  display flex
  justify-content space-evenly
  align-items center

  a
    color #f5f1ed
    text-decoration none

  h2
    margin 1rem 0 0
    font-size 1rem
    font-weight lighter
